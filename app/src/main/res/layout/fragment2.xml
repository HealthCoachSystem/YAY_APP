<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >


    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/london"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/border"
            android:fontFamily="@font/typo"
            android:gravity="center"
            android:text="PARIS, SEPTEMBER"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/londonimage"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_marginTop="90dp"
            android:scaleX="1.0"
            android:scaleY="1.2"
            android:src="@drawable/parismap" />

        <TextView
            android:id="@+id/here1"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/here3"
            android:text="minzy"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="#000000"
            android:gravity="bottom"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/here2"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/here3"
            android:text="xin"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="#000000"
            android:gravity="bottom"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/here3"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/here3"
            android:text="dagon"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="#000000"
            android:gravity="bottom"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/here4"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/here3"
            android:text="jaeyoung"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="#000000"
            android:gravity="bottom"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />



    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/image"
        android:id="@+id/rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:paddingTop="35dp"
        android:paddingBottom="35dp">


        <RelativeLayout
            android:id="@+id/ranking1grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rank1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:src="@drawable/anonymous"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/rank1"
                android:src="@drawable/heart1" />

            <ImageView
                android:id="@+id/r1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/rank1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/r1" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rank1"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/r1"
                android:fontFamily="@font/typo"
                android:text="XIN"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ban"
                android:text="20,000" />

            <TextView
                android:id="@+id/steps1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/step1"
                android:text="steps"
                android:textSize="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ranking2grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/ranking1grid">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rank2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@drawable/anonymous"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rank2"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/r2"
                android:fontFamily="@font/typo"
                android:text="MINZY"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/r2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/rank2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/r2" />

            <TextView
                android:id="@+id/step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ban"
                android:text="16,430" />

            <TextView
                android:id="@+id/steps2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name2"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/step2"
                android:text="steps"
                android:textSize="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ranking3grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/ranking2grid">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rank3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@drawable/anonymous"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <ImageView
                android:id="@+id/r3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/rank3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/r3" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rank3"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/r3"
                android:fontFamily="@font/typo"
                android:text="DAGON"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name3"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ban"
                android:text="8,963" />

            <TextView
                android:id="@+id/steps3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name3"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/step3"
                android:text="steps"
                android:textSize="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ranking4grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ranking3grid">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rank4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@drawable/anonymous"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rank4"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/r4"
                android:fontFamily="@font/typo"
                android:text="JAEYOUNG"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/r4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/rank4"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/r4" />

            <TextView
                android:id="@+id/step4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name4"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ban"
                android:text="520" />

            <TextView
                android:id="@+id/steps4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name4"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/step4"
                android:text="steps"
                android:textSize="10dp" />
        </RelativeLayout>
    </RelativeLayout>

    </RelativeLayout>
</LinearLayout>