<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:id="@+id/workoutStart"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/exitLine"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border">

        <Button
            android:id="@+id/exit"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text = "Exit"
            android:textSize = "13dp"
            android:fontFamily="@font/typo"
            android:onClick="onClick"
            ></Button>

        <Button
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/typo"
            android:onClick="onClick"
            android:text="Start"
            android:textSize="13dp"></Button>

    </FrameLayout>
<FrameLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <VideoView
        android:id="@+id/workoutImage"
        android:layout_marginTop="125dp"
        android:layout_width="wrap_content"
        android:layout_height="400dp">


    </VideoView>



</FrameLayout>

    <RelativeLayout
        android:id="@+id/countng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp">


        <TextView
            android:id="@+id/workouttimer"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/typo"
            android:gravity="center"
            android:text="1:30"
            android:textSize="35dp"></TextView>

        <TextView
            android:id="@+id/count"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/typo"
            android:gravity="center"
            android:text="0"
            android:textSize="35dp"></TextView>

        <SeekBar
            android:id="@+id/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:max="100"
            android:progress="50"></SeekBar>


    </RelativeLayout>




</RelativeLayout>
</ScrollView>